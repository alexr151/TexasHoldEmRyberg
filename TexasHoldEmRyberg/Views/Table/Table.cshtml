@model CurrentHand

@{
    ViewBag.Title = "Let's Play Poker!";
} 


<h2>Best of Luck!</h2>

<h4>The Table</h4>

<div class="row">
    @foreach (var card in ViewBag.Table)
            {
    <div class="col-sm-2">
        <ul class="list-group text-center">
            <li class="list-inline-item">
                <img src="~/PNG-cards-1.3/@card.CardImg" alt="@card.Value of @card.Suit " style="width: 200px; height: 150px;padding: 0.5em;" />
            </li>
        </ul>
    </div>
            }
</div>


<h4>Your Hand</h4>

<div class="row">
    <div class="col-sm-2">
        @foreach (var card in ViewBag.Hand)
            {
                <ul class="list-group text-center">
                    <li class="list-inline-item">
                        <img src="~/PNG-cards-1.3/@card.CardImg" alt="@card.Value of @card.Suit" style="width: 200px; height: 150px; padding:0.5em;" /> 
                    </li>
                </ul> 
            }
    </div>
</div>

<a asp-action="PreFlop">Hand</a>