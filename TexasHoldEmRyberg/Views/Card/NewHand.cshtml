@model List<Card>

@{ 
    ViewBag.Title = "New Hand";
}

<h4>Hand tester</h4>

<form asp-controller="Card" method="get">
    <div class="row">
        <div class="col-sm-10">
            <ul class="list-inline">
                @foreach (var card in Model)
                {
                    <li class="list-inline-item">
                        <img src="~/PNG-cards-1.3/@card.CardImg" alt="@card.Value of @card.Suit " style="width: 200px; height: 150px;padding: 0.5em;" />
                    </li>
                }
            </ul>
        </div>

        <button type="submit" class="btn btn-primary">Generate New Hand</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
    </div>
</form>


<div class="row">
    @foreach(var card in Model){
        <div class="col-sm-4">

        </div>
    }
</div>